<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_hazir" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:text="Sign In"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Continue with"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView13"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:srcCompat="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:srcCompat="@drawable/ic_google" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="or"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/imageView12" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="10dp"
            android:background="#C7C9D9"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="#C7C9D9"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@id/vg2"
            app:layout_constraintStart_toEndOf="@id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_back"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_back"
            android:ems="10"
            android:hint="Username"
            android:inputType="text"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_back"
            android:ems="10"
            android:hint="Phone"
            android:inputType="text"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/etUserName" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_back"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/etPhone" />


        <EditText
            android:id="@+id/etCnic"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_back"
            android:ems="10"
            android:hint="Cnic"
            android:inputType="text"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />


        <EditText
            android:id="@+id/etCity"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_back"
            android:ems="10"
            android:hint="City"
            android:inputType="text"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/etCnic" />


        <EditText
            android:id="@+id/etPass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_back"
            android:ems="10"
            android:hint="Password"
            android:inputType="text"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/etCity" />

        <EditText
            android:id="@+id/etReenterPass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_back"
            android:ems="10"
            android:hint="Re enter password"
            android:inputType="text"
            android:paddingStart="15dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/etPass" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:text="Sign Up"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@+id/etReenterPass" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toBottomOf="@id/btnSignUp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@id/textView12" />

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toStartOf="@+id/vg2"
            app:layout_constraintStart_toStartOf="@+id/vg1"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>